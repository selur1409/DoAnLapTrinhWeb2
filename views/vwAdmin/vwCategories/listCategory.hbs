<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>CATEGORIES</h4>
    <a class="btn btn-outline-success" href="/admin/categories/addlv1" role="button" title="Add Category Lv1">
      <i class="fa fa-plus" aria-hidden="true"></i>
      Thêm chuyên mục cấp 1
    </a>
    <a class="btn btn-secondary" href="/admin/categories/list-of-all" role="button" title="List of all">
      <i class="fas fa-list-ol"></i>
      Danh sách các chuyên mục
    </a>
    <a class="btn btn-outline-warning" href="#" role="button" title="List of all">
      <i class="fas fa-key"></i>
      Kích hoạt
    </a>
  </div>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">Không có dữ liệu.</p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Chuyên mục</th>
        <th scope="col">Đường dẫn tĩnh</th>
        <th scope="col">Manage</th>
        <th scope="col">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.categories}}
      <tr>
        <th scope="row" class="text-center">{{Stt}}</th>
        <td>{{Name}}</td>
        <td>{{Url}}</td>
        <td>{{Manage}}</td>
        <td class="text-right">
        <form method="POST" action="/admin/categories/del">
            <a class="btn btn-primary btn-sm" href="/admin/categories/views/{{Url}}" role="button" title="View Category">
                <i class="fas fa-eye"></i>
            </a>          
            <a class="btn btn-primary btn-sm" href="/admin/categories/edit/{{Url}}" role="button" title="Edit Category">
                <i class="fas fa-pen"></i>
            </a>
            
            <input type="text" name="Id" value="{{Id}}">            
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i>
            </button>
        </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
</div>