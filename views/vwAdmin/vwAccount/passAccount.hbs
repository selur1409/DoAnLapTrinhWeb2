{{#section 'css'}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}
{{#section 'js'}}
    <script
     src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
    </script>
  <script>
    $('#txtDOB').datetimepicker({
      format: 'd/m/Y',
      timepicker: false,
      mask: true,
    });  
  </script>

{{/section}}

<div class="col mb-2 mt-2 ml-3">
    <a class="btn btn-info" href="/admin/accounts?select={{select}}" role="button" title="Back to List">
      <i class="fas fa-reply"></i>
      Trở về
    </a>
    <a class="btn btn-dark" href="/admin/accounts?select={{select}}" role="button" title="{{select}}">
      {{select}}
    </a>
</div>

<div class="card">
  <div class="card-header">
    <h4>Thay đổi mật khẩu</h4>
  </div>
  <div class="card-body">
    
    {{#if err}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{err}}
    </div>
    {{/if}}
    {{!-- xử lý thành công --}}
    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      {{success}}
    </div>
    {{/if}}

    <form method="POST">
      <div class="form-group required">
        <label class="control-label" for="txtUsername">Tên tài khoản</label>
        <input type="text" class="form-control" placeholder="Tên tài khoản" id="txtUsername" name="Username" readonly value="{{username}}">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtPasswordOld">Mật khẩu cũ</label>
        <input type="password" class="form-control" placeholder="Mật khẩu cũ" id="Password" name="PasswordOld"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 or more characters">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtPassword">Mật khẩu mới</label>
        <input type="password" class="form-control" placeholder="Mật khẩu mới" id="Password" name="Password"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 or more characters">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtConfirm">Nhập lại mật khẩu mới</label>
        <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" id="Password" name="Confirm"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 or more characters">
      </div>
      
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-check" aria-hidden="true"></i>
        Thay đổi
      </button>
      <br>
      <a href="/admin/accounts/views/resetpassword/{{username}}">
        Cấp lại mật khẩu
      </a>
    </form>
    </form>
  </div>

</div>