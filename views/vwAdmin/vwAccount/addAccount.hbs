{{#section 'css'}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}
{{#section 'js'}}
    <script
     src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
    </script>
  <script>
    $('#txtDOB').datetimepicker({
      format: 'd/m/Y',
      timepicker: false,
      mask: true,
    });  
  </script>

{{/section}}

<div class="col mb-2 mt-2 ml-3">
    <a class="btn btn-info" href="/admin/accounts" role="button" title="Back to List">
      <i class="fas fa-reply"></i>
      Trở về
    </a>
    <a class="btn btn-dark" href="/admin/accounts?select={{select}}" role="button" title="{{select}}">
      {{select}}
    </a>
</div>

<div class="card">
  <div class="card-header">
    <h4>Thêm tài khoản mới</h4>
  </div>
  <div class="card-body">
    
    {{#if err}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{err}}
    </div>
    {{/if}}
    {{!-- xử lý thành công --}}
    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      {{success}}
    </div>
    {{/if}}

    <form method="POST" action="/admin/accounts/add/{{select}}">
      <div class="form-group required">
        <label class="control-label" for="txtName">Full Name</label>
        <input type="text" class="form-control" placeholder="Full name" id="txtName" name="Name">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtUsername">Username</label>
        <input type="text" class="form-control" id="txtUsername" name="Username" placeholder="Username"
        pattern="([a-z]){1}([a-z0-9_\.]){3,31}" title="Must contain at least one character a-z and numeric character or lowercase, and at least 4-32 characters" autofocus>
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtPassword">Password</label>
        <input type="password" class="form-control" placeholder="Password" id="txtPassword" name="Password"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 or more characters">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtConfirm">Confirm</label>
        <input type="password" class="form-control" placeholder="Confirm password" id="txtConfirm" name="Confirm"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 or more characters">>
      </div>
      {{#if nickname}}
      <div class="form-group">
        <label class="control-label" for="txtNickname">Nickname</label>
        <input type="text" class="form-control" placeholder="Date of birth" id="txtNickname" name="Nickname">
      </div>
      {{/if}}
      <div class="form-group">
        <label class="control-label" for="txtDOB">DOB</label>
        <input type="text" class="form-control" placeholder="Date of birth" id="txtDOB" name="DOB">
      </div>
      <div class="form-group required">
        <label class="control-label" for="radioSex">Sex</label>
        <div class="form-check">
          <div class="form-row">
              <div class="form-group col-sm-4">
                 <input type="radio" id="radioMale" class="form-check-input" name="Sex" value="true">
                <label for="myRadio1">Male</label>
              </div>
              <div class="form-group col-sm-4">
                <input type="radio" id="radioFemale" class="form-check-input"  name="Sex" value="false">
                <label for="myRadio1">Female</label>        
              </div>
            </div>
          </div>
        </div>
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-check" aria-hidden="true"></i>
        Register
      </button>
    </form>
    </form>
  </div>

</div>