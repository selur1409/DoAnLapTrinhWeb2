<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>AdminLTE 3 | Starter</title>

  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="/public/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/public/css/adminlte.min.css">
   <link rel="stylesheet" href="/public/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  {{{_sections.css}}}
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
          <a href="/" class="nav-link">
            <i class="fa fa-home" aria-hidden="true"></i>
            <b>HOME</b>
          </a>
        </li>
      </ul>
      <form class="ml-auto" id="frmLogout" action="/account/logout" method="POST"></form>
      <nav class="navbar">
        <ul class="nav navbar-light bg-light">
          {{#if lcIsAuthenticated}}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-user" aria-hidden="true"></i>
              Welcome, <b>{{lcAuthUser.Name}}</b>!
            </a>
            <div class="dropdown-menu bg-info" aria-labelledby="navbarDropdown">
              <a class="dropdown-item bg-info" href="/account/Profile/4">
                <i class="fa fa-user" aria-hidden="true"></i>
                Account Profile
              </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item bg-info" href="/">
                <i class="fa fa-arrow-right" aria-hidden="true"></i>
                Change To Home
              </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item bg-info" href="javascript: $('#frmLogout').submit()">
                <i class="fa fa-sign-out" aria-hidden="true"></i>
                Logout
              </a>
            </div>
          </li>
          {{/if}}
        </ul>
      </nav>
    </nav>

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4 ">
      <!-- Brand Logo -->
      <a href="/editor" class="brand-link bg-danger">
        <img src="/public/img/Editor_Logo.png" alt="Editor Logo" class="brand-image img-circle elevation-3"
          style="opacity: .8">
        <span class="brand-text font-weight-light">EDITOR MANAGER </span>
      </a>

      <!-- Sidebar -->
      <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
          <div class="image">
            <img src="{{#if Avatar}}/public/img/{{Avatar}}{{else}}/public/img/user2-160x160.jpg{{/if}}"
              class="img-circle elevation-2" alt="User Image">
          </div>
          <div class="info">
            <a href="/account/Profile/4" class="d-block">{{lcAuthUser.Name}}</a>
            {{!-- Alexander Pierce --}}
          </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
          <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
            <li class="nav-item has-treeview menu-open">
              <a href="#" class="nav-link active">
                <i class="fas fa-bars"></i>
                <p> MANAGER
                 <i class="right fas fa-angle-left"></i>
                </p>
              </a>
              <ul class="nav nav-treeview">
                <li class="nav-item">
                  <a href="/editor/pending" class="nav-link {{#if IsActivePending}} bg-info {{/if}}">
                    {{!-- <i class="fas fa-circle"></i> --}}
                    <i class="far fa-circle"></i>
                    <p>Posts Pending</p>

                  </a>
                </li>
                <li class="nav-item">
                  <a href="/editor/accepted" class="nav-link {{#if IsActiveAccepted}} bg-success {{/if}}">
                    <i class="far fa-check-circle"></i>
                    <p>Posts Accepted</p>
                    <span class="badge badge-success"></span>
                  </a>
                </li>
                <li class="nav-item">
                  <a href="/editor/denied" class="nav-link  {{#if IsActiveDenied}} bg-danger {{/if}}">
                    <i class="far fa-times-circle"></i>
                    <p>Posts Denied</p>
                    <span class="badge badge-danger"></span>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
        <!-- /.sidebar-menu -->
      </div>
      <!-- /.sidebar -->
    </aside>

    <div class="content-wrapper">
      <div>
         <a href="/editor" class="nav-link">
            <i class="fa fa-home" aria-hidden="true"></i>
            <b>Editor Home Page</b>
          </a>

      </div>
      {{{body}}}
    </div>
    <!-- /.content-wrapper --

    <!-- Main Footer -->
    <footer class="main-footer">
    </footer>
  </div>
  <!-- ./wrapper -->

  <!-- REQUIRED SCRIPTS -->
  <!-- jQuery -->
  <script src="/public/plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="/public/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/public/js/adminlte.min.js"></script>
  <script src="/public/plugins/sweetalert2/sweetalert2.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.runtime.js"></script>
  {{{_sections.js}}}

</body>

</html>