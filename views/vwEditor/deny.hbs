<div class="card pl-2 pr-2">
  <div class="card-header text-primary bg-danger d-flex justify-content-between mt-2 pb-2">
    <button class="btn btn-info btn-sm" onclick="goBack()"><i class="fa fa-chevron-left" aria-hidden="true"></i></i>
      Back</button>
    <b><i class="fa fa-check-circle" aria-hidden="true"></i> DENY POST</b>
  </div>

  <form action="/editor/denyPost" method="POST" onsubmit="return validateForm">
    <div class="form-group">
      <label for="exampleInputTitle1">Tilte</label>
      <input type="text" class="form-control" value="{{this.denyPost.Title}}" readonly>
      <label for="exampleInputAuthor1">Author: </label>
      <input type="text" class="form-control col-4" value="{{this.denyPost.Nickname}}" readonly>
      <label for="exampleInputAuthor1">Categories: </label>
      <input type="text" class="form-control col-4" value="{{this.categories.Name}}" readonly>
      <label for="exampleInputAuthor1">Categories Sub: </label>
      <input type="text" class="form-control col-4" value="{{this.cateSub.Name}}" readonly>
      <label for="exampleInputAuthor1">Summary: </label>
      <textarea type="text" class="form-control" cols="30" rows="5"
        readonly>{{this.denyPost.Content_Summary}}</textarea>

      <input type="hidden" id="idPost" name="idPost" value="{{this.denyPost.Id}}">
      <input type="hidden" id="idCate" name="idCate" value="{{this.categories.Id}}">
      <input type="hidden" id="idCateSub" name="idCateSub" value="{{this.cateSub.Id}}" </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Reason for the rejection: </label>
        <textarea class="form-control" name="reasonDeny" id="exampleFormControlTextarea1" rows="3" required
          pattern="\S+.*"></textarea>
      </div>
      <div class="text-center mt-3">
        <a type="button" href="#" class="btn btn-danger mr-3"><i class="fas fa-ban"></i> Cancel</a>
        <button type="submit" class="btn btn-primary"><i class="fab fa-telegram-plane"></i> Send</button>
      </div>
  </form>

  <script type="text/javascript">
    function validateForm() {
      var u = document.getElementById("exampleFormControlTextarea1").value;

      if (u == "") {
        return false;
      }
      return true;
    }
  </script>
  <script>
  function goBack() {
    window.history.back();
  }
</script>