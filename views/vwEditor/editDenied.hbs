<div class="card pl-2 pr-2">
  <div class="card-header text-primary bg-warning d-flex justify-content-between mt-2 pb-2">
    <button class="btn btn-info" onclick="goBack()"><i class="fa fa-chevron-left" aria-hidden="true"></i></i>
      Back</button>
    <b><i class="fa fa-check-circle" aria-hidden="true"></i> EDIT DENIED POSTS</b>
  </div>

  <form action="/editor/editdeny" method="POST" onsubmit="return validateForm">
  <div class="form-group">
    <label for="exampleInputTitle1">Tilte</label>
    <input type="text" class="form-control" value="{{this.denyPost.Title}}" readonly>
    <label for="exampleInputAuthor1">Author: </label>
    <input type="text" class="form-control"  value="{{this.denyPost.Nickname}}" readonly>
    <label for="exampleInputAuthor1">Categories: </label>
    <input type="text" class="form-control"  value="{{this.categories.Name}}" readonly>
    <label for="exampleInputAuthor1">Content Summary: </label>
    <input type="text" class="form-control" value="{{this.denyPost.Content_Summary}}" readonly>

    <input type="hidden" id="idPost" name="idPost" value="{{this.denyPost.Id}}">
    <input type="hidden" id="idCate" name="idCate" value="{{this.categories.idCategories}}">
    <input type="hidden" id="idCateSub" name="idCateSub" value="{{this.cateSub.Id}}"
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Reason for the rejection</label>
    <textarea class="form-control" name="reasonDeny" id="exampleFormControlTextarea1" rows="3" required
      pattern="\S+.*">{{this.note.Note}} </textarea>
  </div>
  <div class="d-flex justify-content-center mt-2">
    <a type="button" href="#" class="btn btn-danger mr-4">Cancel</a>
  <button type="submit" class="btn btn-primary">Change</button>
  </div>
</form>

<script type="text/javascript">
  function validateForm() {
    var u = document.getElementById("exampleFormControlTextarea1").value;

    if (u == "") {
      return false;
    }
    return true;
  }
</script>
<script>
  function goBack() {
    window.history.back();
  }
</script>