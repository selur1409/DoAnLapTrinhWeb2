<div class="card">
  <div class="card-header text-primary bg-success d-flex justify-content-between pt-2 pb-2">
    <button class="btn btn-info" onclick="goBack()"><i class="fa fa-chevron-left" aria-hidden="true"></i></i>
      Back</button>
    <b><i class="fa fa-check-circle" aria-hidden="true"></i> ACCEPT POST</b>
  </div>

  <form action="/editor/acceptPost" method="POST">
    <div class="form-group">
      <label for="exampleInputTitle1">Tilte: </label>
      <input type="text" class="form-control" id="postName" value="{{this.inforOfPost.Title}}" readonly>
      <label for="exampleInputTitle1">Author: </label>
      <input type="text" class="form-control" id="postName" value="{{this.author.Nickname}}" readonly>
      <label for="exampleFormControlSelect1">Categories: </label>
      <select class="form-control" id="exampleFormControlSelect1" name="subCate">
        <option selected>{{this.categoriesSubOfPost.Name}}</option>
        {{#each this.listCategoriesSub}}
        <option>{{Name}}</option>
        {{/each}}
      </select>
      <label for="exampleInputTitle1">Tags: </label>
      <div class="input-group mb-3">
        <div>
          <div>
            {{#each this.listTagsOfPost}}
            <input type="checkbox" aria-label="Checkbox for following text input" checked>
            <label> {{Name}} </label>
            <br>
            {{/each}}
            {{#each this.listTags}}
            <input type="checkbox" aria-label="Checkbox for following text input">
            <label> {{Name}} </label>
            <br>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i> Send</button>
      </div>
    </div>
  </form>
  <button class="btn btn-danger" onclick="goBack()"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</button>
</div>
<script>
  function goBack() {
    window.history.back();
  }
</script>
